<style>
    *{
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        font-weight: 900;
    }
    html, body {
        height: 100%;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    main {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        height: 90%;
        width: 90%;
    }

    .content {
        margin-bottom: 30px;
    }

    h1 {
        background: -webkit-linear-gradient(#ff9e0d, #ffea00);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 80px;
        margin: 0;
    }

    .svg-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    svg {
        width: 100%;
        height: 100%;
        stroke: #ffffff;
        stroke-width: 5;
        fill: none;
        stroke-dasharray: 1000;
        stroke-dashoffset: 0;
        animation: dashoffset 20s linear infinite;
    }

    @keyframes dashoffset {
        0% {
            stroke-dashoffset: 1000;
        }
        50% {
            stroke-dashoffset: 0;
        }
        100% {
            stroke-dashoffset: 1000;
        }
    }

    h2 {
        font-size: 30px;
        margin: 0;
    }

    @media (max-width: 1200px) {
        h1 {
            font-size: 91px;
        }
        h2 {
            font-size: 34px;
        }
        svg {
            height: 260px;
            width: 260px;
        }
    }

    @media (max-width: 992px) {
        h1 {
            font-size: 78px;
        }
        h2 {
            font-size: 29px;
        }
        svg {
            height: 234px;
            width: 234px;
        }
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 65px;
        }
        h2 {
            font-size: 26px;
        }
        svg {
            height: 208px;
            width: 208px;
        }
    }

    @media (max-width: 576px) {
        h1 {
            font-size: 52px;
        }
        h2 {
            font-size: 23px;
        }
        svg {
            height: 182px;
            width: 182px;
        }
    }
</style>
